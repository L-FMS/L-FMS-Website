{{#extend "stylesheets"}}
<link rel="stylesheet" href="/stylesheets/login.css">
{{/extend}}

    <main class="login-screen">
      <div class="login-icon">
        <img src="images/icons/svg/mail.svg" alt="Welcome th L&FMS">
        <h4>Welcome to <small>L&FMS</small></h4>
      </div>
      <form class="login-form" name="loginForm" action="/login" method="POST">
        <div class="form-group">
          <input type="email" class="form-control login-field" name="email" placeholder="登录邮箱" id="login-email" required autofocus>
          <label for="login-email" class="login-field-icon fui-user"></label>
        </div>
        <div class="form-group">
          <input type="password" class="form-control login-field" name="password" placeholder="密码" id="login-pass" required>
          <label for="login-pass" class="login-field-icon fui-lock"></label>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">登录</button>
        <a href="#" class="login-link">忘记密码?</a>
        <a href="/join" class="login-link">没有账号？现在注册</a>
      </form>
    </main>

{{#extend "scripts"}}
<script src="/javascripts/login.js" type="text/javascript"></script>
{{/extend}}